{
  "openapi": "3.1.0",
  "info": {
    "version": "1.0.0",
    "title": "Recipes app",
    "license": {
      "name": "Apache 2.0",
      "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
    },
    "description": "This is the documentation for the Recipes app."
  },
  "servers": [
    {
      "url": "http://127.0.0.1:3000",
      "description": "Local development server"
    }
  ],
  "tags": [
    {
      "name": "Recipes",
      "description": "Operations about users."
    },
    {
      "name": "Auth",
      "description": "Auth operations."
    }
  ],
  "paths": {
    "/api/recipes/{recipeId}/favorites": {
      "patch": {
        "tags": [
          "Recipes"
        ],
        "summary": "Add a recipe to user's favorites",
        "operationId": "addFavoriteRecipe",
        "description": "Add a recipe to user's favorites",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "in": "path",
            "name": "recipeId",
            "required": true,
            "schema": {
              "type": "string",
              "example": "6462a8f74c3d0ddd28897fbf"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Recipe successfully added to favorites",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Recipe added to favorites"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/401"
          },
          "404": {
            "$ref": "#/components/responses/404"
          }
        }
      }
    },
    "/api/ingredients": {
      "get": {
        "tags": [
          "Recipes"
        ],
        "summary": "Search recipes by ingredient names",
        "operationId": "searchRecipesByIngredients",
        "description": "Search recipes by ingredient names",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "in": "query",
            "name": "names",
            "required": true,
            "description": "list of ingredients",
            "schema": {
              "type": "string",
              "example": "Cabbage,tomato"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successfully found recipes",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "integer",
                      "example": 200
                    },
                    "message": {
                      "type": "string",
                      "example": "Successfully found recipes!"
                    },
                    "data": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/recipe"
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/400"
          },
          "404": {
            "$ref": "#/components/responses/404"
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer"
      }
    },
    "responses": {
      "400": {
        "description": "Please write the ingredients",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "required": [
                "status",
                "message"
              ],
              "properties": {
                "status": {
                  "type": "integer",
                  "example": 400
                },
                "message": {
                  "type": "string",
                  "example": "Please write the ingredients"
                }
              }
            }
          }
        }
      },
      "401": {
        "description": "Unauthorized error",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "required": [
                "status",
                "message",
                "data"
              ],
              "properties": {
                "status": {
                  "type": "integer",
                  "example": 401
                },
                "message": {
                  "type": "string",
                  "example": "UnauthorizedError"
                },
                "data": {
                  "type": "object",
                  "required": [
                    "message"
                  ],
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Access token expired"
                    }
                  }
                }
              }
            }
          }
        }
      },
      "404": {
        "description": "Contact not found",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "required": [
                "status",
                "message"
              ],
              "properties": {
                "status": {
                  "type": "integer",
                  "example": 404
                },
                "message": {
                  "type": "string",
                  "example": "User not found"
                }
              }
            }
          }
        }
      }
    },
    "schemas": {
      "recipe": {
        "type": "object",
        "required": [
          "nameRecipe",
          "recipeDescription",
          "ingredients",
          "recipeCategory",
          "calories",
          "cookingTime",
          "owner"
        ],
        "properties": {
          "nameRecipe": {
            "type": "string",
            "example": "Cabbage Soup"
          },
          "dishPhoto": {
            "type": "string",
            "format": "url",
            "example": "http://example.com/photo.jpg"
          },
          "recipeDescription": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "example": [
              "Chop cabbage",
              "Boil water",
              "Cook for 30 minutes"
            ]
          },
          "ingredients": {
            "type": "array",
            "items": {
              "type": "object",
              "required": [
                "name",
                "measure"
              ],
              "properties": {
                "name": {
                  "type": "string",
                  "example": "Cabbage"
                },
                "measure": {
                  "type": "string",
                  "example": "200g"
                }
              }
            }
          },
          "recipeCategory": {
            "type": "string",
            "example": "Lamb"
          },
          "calories": {
            "type": "number",
            "example": 250
          },
          "cookingTime": {
            "type": "number",
            "example": 30
          },
          "owner": {
            "type": "string",
            "example": "5f8f8c44c9e77a001a1b2c3d"
          }
        }
      }
    }
  }
}